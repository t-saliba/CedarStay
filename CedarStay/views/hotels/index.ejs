
    <% layout ('layouts/boilerplate') %>

    <div id="main-map"></div>

    <h1>All hotels</h1>
    <div>
        <a href="/hotels/new">Add Hotel</a>
    </div>
    
        <% for (let hotel of hotels){%>
           <div class="card mb-3">
            <div class =row>
                <div class="col-md-4">
                    <img class="img-fluid" alt="" src="<%=hotel.image[0]%>">
                </div>
                <div class="col-md-8">
                    <div class="card-body">
                        <h5 class="card-title"> <%= hotel.title %></h5>
                        <p class="card-text">
                            <small class="text-muted"><%=hotel.location%></small>                            
                        </p>
                        <a class="btn btn-primary" href="/hotels/<%=hotel._id%>">View <%=hotel.title%></a>
                    </div>
                </div>
            </div>
           </div>
        <%}%>

        <script>
            const mapToken = '<%-process.env.MAPBOX_ACCESS_TOKEN%>'
            const hotels = {features: <%- JSON.stringify(hotels) %>}
           </script>
        <script src="/javascripts/mainMap.js"></script>
        
    
